@model Cart

@section Bar {
    <section class="bg-primary p-3">
        <div class="container">
            <nav>
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                    <li class="breadcrumb-item active">Alışveriş Sepeti</li>
                </ol>
            </nav>
        </div>
    </section>
}

<section class="mt-3">
    <div class="container">
        @if (Model.CartItems.Count == 0)
        {
            <div class="alert alert-warning">
                Sepette bir ürün yok.
            </div>
        }
        else
        {
            <div class="row">
                <div class="col-lg-7">
                    @* <div class="alert alert-warning p-2">Ücretsiz Kargo</div> *@
                    <ul class="list-group">
                        @foreach (var cartItem in Model.CartItems)
                        {

                            <li class="py-3 mb-2 border-top list-group-item">
                                <div class="row align-items-center">
                                    <div class="col-7">
                                        <div class="d-flex align-items-center">
                                            <img src="~/img/@cartItem.Urun.Resim" style="width: 100px;" alt="">
                                            <div class="ms-3">
                                                <a asp-controller="Urun" asp-action="Details" asp-route-id="@cartItem.UrunId"
                                                    class="text-decoration-none text-black">
                                                    <h6 class="mb-0">@cartItem.Urun.Ad</h6>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-2">
                                        <input type="number" value="@cartItem.Miktar" class="form-control fw-bold text-primary"
                                            min="1">
                                    </div>
                                    <div class="col-2 text-center text-primary">
                                        <span class="fw-bold">@(cartItem.Urun.Fiyat* cartItem.Miktar) TL</span>
                                    </div>
                                    <div class="col-1">
                                        <form asp-controller="Cart" asp-action="RemoveItem" method="post">
                                            <input type="hidden" name="cartItemId" value="@cartItem.Id">
                                            <button type="submit" class="btn btn-sm d-flex align-items-center">
                                                <i class="fa-solid fa-trash-can "></i>
                                                <span>Sil</span>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </li>

                        }
                    </ul>
                </div>
                <div class="col-lg-5">
                    <div class="card">
                        <div class="p-3 card-body">
                            <h4 class="mb-4">Sepet Özeti</h4>
                            <div class="card mb-2">
                                <div class="list-group list-group-flush">
                                    <div class="d-flex justify-content-center align-items-center list-group-item">
                                        <div class="me-auto">Sipariş Toplamı</div>
                                        <span>@Model.AraToplam() TL</span>
                                    </div>
                                    <div class="d-flex justify-content-center align-items-center list-group-item">
                                        <div class="me-auto">Kargo Ücreti</div>
                                        <span>Ücretsiz</span>
                                    </div>
                                    <div class="d-flex justify-content-center align-items-center list-group-item">
                                        <div class="me-auto">Vergi (%20)</div>
                                        <span>@Model.ToplamVergi() TL</span>
                                    </div>
                                    <div class="d-flex justify-content-center align-items-center list-group-item">
                                        <div class="me-auto my-auto h5">Toplam</div>
                                        <span class="text-primary fw-bold">@Model.Toplam() TL</span>
                                    </div>
                                </div>
                            </div>
                            <div class="d-grid">
                                <a href="#" class="btn btn-primary btn-lg">Siparişi Tamamla</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>