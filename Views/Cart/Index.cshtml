@model Cart

@section Bar {
    <section class="bg-primary p-3">
        <div class="container">
            <nav>
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                    <li class="breadcrumb-item active">Alışveriş Sepeti</li>
                </ol>
            </nav>
        </div>
    </section>
}


<section class="mt-3">
    <div class="container">
        @if (Model.CartItems.Count == 0)
        {
            <div class="alert alert-warning">
                Sepette bir ürün yok.
            </div>
        }
        else
        {
            <div class="row">
                <div class="col-lg-7">
                    @* <div class="alert alert-warning p-2">Ücretsiz Kargo</div> *@
                    <ul class="list-group">
                        @foreach (var item in Model.CartItems)
                        {

                            <li class="py-3 mb-2 border-top list-group-item">
                                <div class="row align-items-center">
                                    <div class="col-8">
                                        <div class="d-flex align-items-center">
                                            <img src="~/img/@item.Urun.Resim" style="width: 100px;" alt="">
                                            <div class="ms-3">
                                                <a asp-controller="Urun" asp-action="Details" asp-route-id="@item.UrunId"
                                                    class="text-decoration-none">
                                                    <h6 class="mb-0">@item.Urun.Ad</h6>
                                                </a>
                                                <a asp-controller="" asp-action="" class="btn btn-danger btn-sm mt-4">
                                                    <i class="fa-solid fa-trash-can"></i> Sil
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-2">
                                        <input type="number" value="@item.Miktar" class="form-control" min="1">
                                    </div>
                                    <div class="col-2 text-center">
                                        <span class="fw-bold">@item.Urun.Fiyat ₺</span>
                                    </div>
                                </div>
                            </li>

                        }
                    </ul>
                </div>
                <div class="col-lg-5">
                    <div class="card">
                        <div class="p-3 card-body">
                            <h5 class="mb-4">Sipariş Özeti</h5>
                            <div class="card mb-2">
                                <div class="list-group list-group-flush">
                                    <div class="d-flex justify-content-center align-items-center list-group-item">
                                        <div class="me-auto">Sipariş Toplamı</div>
                                        <span>1000 ₺</span>
                                    </div>
                                    <div class="d-flex justify-content-center align-items-center list-group-item">
                                        <div class="me-auto">Kargo Ücreti</div>
                                        <span>Ücretsiz</span>
                                    </div>
                                    <div class="d-flex justify-content-center align-items-center list-group-item">
                                        <div class="me-auto">Vergi (%20)</div>
                                        <span>200 ₺</span>
                                    </div>
                                    <div class="d-flex justify-content-center align-items-center list-group-item">
                                        <div class="me-auto">Toplam</div>
                                        <span>1200 ₺</span>
                                    </div>
                                </div>
                            </div>
                            <div class="d-grid">
                                <a href="#" class="btn btn-primary btn-lg">Siparişi Tamamla</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>