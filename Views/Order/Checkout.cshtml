@model OrderCreateModel

@section Bar {
    <section class="bg-primary p-3">
        <div class="container">
            <nav>
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                    <li class="breadcrumb-item active">Siparişi Tamamla</li>
                </ol>
            </nav>
        </div>
    </section>
}

<section class="mt-3">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h2 class="h6 mb-0">Sipariş Detayı</h2>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col">
                                <label asp-for="AdSoyad" class="form-label"></label>
                                <input asp-for="AdSoyad" class="form-control">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col">
                                <label asp-for="City" class="form-label"></label>
                                <input asp-for="City" class="form-control">
                            </div>
                            <div class="col">
                                <label asp-for="PostCode" class="form-label"></label>
                                <input asp-for="PostCode" class="form-control">
                            </div>
                            <div class="col">
                                <label asp-for="TelNo" class="form-label"></label>
                                <input asp-for="TelNo" class="form-control">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col">
                                <label asp-for="Address" class="form-label"></label>
                                <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col">
                                <label asp-for="OrderNote" class="form-label"></label>
                                <textarea asp-for="OrderNote" class="form-control" rows="3"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h2 class="h6 mb-0">Sipariş Özeti</h2>
                    </div>
                    <div class="card-body">
                        <div class="list-group">
                            @foreach (var item in ViewBag.Cart.CartItems)
                            {
                                <div class="d-flex justify-content-between align-items-center list-group-item">
                                    <p class="mb-0">@item.Urun.Ad (@item.Miktar Adet)</p>
                                    <span>@(item.Urun.Fiyat* item.Miktar) TL</span>
                                </div>
                            }
                            <div class="d-flex justify-content-between align-items-center list-group-item ">
                                <p class="mb-0">Ara Toplam</p>
                                <span>@(ViewBag.Cart.AraToplam()) TL</span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center list-group-item">
                                <p class="mb-0 ">Toplam</p>
                                <span class="fs-5 fw-bold text-primary">@(ViewBag.Cart.Toplam()) TL</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="d-grid mt-3">
                    <a asp-controller="Order" asp-action="Checkout" class="btn btn-primary btn-lg">Ödeme
                        Yap</a>
                </div>
            </div>
        </div>
    </div>
</section>