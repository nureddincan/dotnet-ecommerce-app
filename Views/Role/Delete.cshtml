@using Microsoft.EntityFrameworkCore.Metadata.Internal
@{
    Layout = "_AdminLayout";
}
@model AppRole

<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-body text-center">
                <p>"@Model.Name" adlı rolü silmek istediğinize emin misiniz?</p>
                <form method="post" asp-controller="Role" asp-action="DeleteConfirm">
                    <input type="hidden" asp-for="Id" value="@Model.Id" />
                    @if (ViewBag.Users.Count > 0)
                    {
                        @foreach (var user in ViewBag.Users)
                        {
                            <p>
                                @user
                            </p>
                        }
                    }
                    else
                    {
                        <button type="submit" class="btn btn-danger">Sil</button>
                    }
                    <a asp-controller="Role" asp-action="Index" class="btn btn-primary">İptal</a>
                </form>
            </div>
        </div>
    </div>
</div>