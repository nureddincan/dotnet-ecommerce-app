@model IEnumerable<AppRole>
@{
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col">
        <div class="card shadow">
            <div class="card-header py-1 d-flex justify-content-between align-items-center">
                <h5 class="card-title">Roller</h5>
                <a asp-controller="Role" asp-action="Create" class="btn btn-sm btn-primary">
                    <i class="fa-solid fa-plus"></i>
                </a>
            </div>
            <div class="card-body">
                @if (TempData["Mesaj"] != null)
                {
                    <div class="alert alert-warning mb-3">
                        @TempData["Mesaj"]
                    </div>
                }
                <div class="table-responsive">
                    <table class="table table-bordered table-striped mb-0">
                        <thead class="table-secondary">
                            <tr>
                                <th>Id</th>
                                <th>Role AdÄ±</th>
                                <th style="width: 84px;"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (AppRole role in Model)
                            {
                                <tr>
                                    <td>@role.Id</td>
                                    <td>@role.Name</td>
                                    <td>
                                        <a asp-controller="Role" asp-action="Edit" asp-route-id="@role.Id"
                                            class="btn btn-primary btn-sm">
                                            <i class="fa-solid fa-pen-to-square"></i>
                                        </a>
                                        <a asp-controller="Role" asp-action="Delete" asp-route-id="@role.Id"
                                            class="btn btn-danger btn-sm">
                                            <i class="fa-solid fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>