@{
    Layout = "_AdminLayout";
}
@model SliderEditModel

<div class="row">
    <div class="col">
        <div class="card shadow">
            <div class="card-header py-1 d-flex justify-content-between align-items-center">
                <h5 class="card-title">Slider GÃ¼ncelle</h5>
                <a asp-controller="Slider" asp-action="Index" class="btn btn-sm btn-primary">
                    <i class="fa-solid fa-list"></i>
                </a>
            </div>
            <div class="card-body">
                <form method="post" asp-controller="Slider" asp-action="Edit" enctype="multipart/form-data">
                    <input type="hidden" name="Id" value="@Model.Id">
                    <input type="hidden" name="ResimAdi" value="@Model.ResimAdi">
                    <div class="row mb-3">
                        <label asp-for="Resim" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <img src="~/img/@Model.ResimAdi" alt="@Model.Baslik" class="img-fluid rounded">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Baslik" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Baslik" class="form-control">
                            <span asp-validation-for="Baslik" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Aciklama" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <textarea asp-for="Aciklama" rows="3" class="form-control"></textarea>
                            <span asp-validation-for="Baslik" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Resim" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Resim" class="form-control">
                            <span asp-validation-for="Resim" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="Index" class="col-sm-2 col-form-label">Index</label>
                        <div class="col-sm-10">
                            <input asp-for="Index" class="form-control">
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="AktifMi" class="col-sm-2 col-form-label">Aktif</label>
                        <div class="col-sm-10">
                            <input asp-for="AktifMi" class="form-check-input">
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-10 offset-sm-2">
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}