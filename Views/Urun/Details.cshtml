@model Urun

@section Bar {
    @await Component.InvokeAsync("Navbar")
}

<section class="mt-3">
    <div class="container">
        <div class="row">
            <div class="col-lg-5">
                <!-- resimler ve slider -->
                <div class="gallery-wrap">
                    <div class="img-big-wrap img-thumbnail">
                        <a href="~/img/@Model.Resim" data-type="image" data-fslightbox>
                            <img src="~/img/@Model.Resim" alt="" />
                        </a>
                    </div>
                    <div class="thumbs-wrap">
                        <a href="~/img/1-big.jpeg" data-type="image" data-fslightbox>
                            <img src="~/img/1.jpeg" height="60" alt="" />
                        </a>
                        <a href="~/img/2-big.jpeg" data-type="image" data-fslightbox>
                            <img src="~/img/2.jpeg" height="60" alt="" />
                        </a>
                        <a href="~/img/3-big.jpeg" data-type="image" data-fslightbox>
                            <img src="~/img/3.jpeg" height="60" alt="" />
                        </a>
                        <a href="~/img/4-big.jpeg" data-type="image" data-fslightbox>
                            <img src="~/img/4.jpeg" height="60" alt="" />
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-7">
                <!-- ürün detayları -->
                <article>
                    <h4 class="title text-dark">
                        @Model.Ad
                    </h4>
                    <div class="rating-wrap">
                        <span class="fa fa-star checked"></span>
                        <span class="fa fa-star checked"></span>
                        <span class="fa fa-star checked"></span>
                        <span class="fa fa-star checked"></span>
                        <span class="fa fa-star"></span>
                    </div>
                    <p class="text-success">Stokta</p>
                    <div class="div mb-3">
                        <b class="h5">@Model.Fiyat ₺</b>
                    </div>
                    <div class="product-description mb-3">
                        @Model.Aciklama
                    </div>
                    @* 
                    <dl class="row border-bottom">
                        <dt class="col-3">Renk</dt>
                        <dd class="col-9">Yıldız Işığı</dd>
                        <dt class="col-3">Bağlantı Özellikleri</dt>
                        <dd class="col-9">GPS</dd>
                        <hr />
                    </dl>
                    <div class="row-mb-3">
                        <div class="col-md-4 col-6 mb-2">
                            <label class="form-label">Kasa Boyutu</label>
                            <select class="form-select">
                                <option value="41">41mm</option>
                                <option value="45">45mm</option>
                            </select>
                        </div>
                    </div> 
                    *@
                    <div class="buttons">
                        <form asp-controller="Cart" asp-action="AddToCart" method="post" class="me-1 d-inline">
                            <input type="hidden" name="urunId" value="@Model.Id">
                            <button type="submit" class="btn btn-warning">
                                <i class="fa fa-shopping-basket "></i>Sepete Ekle
                            </button>
                        </form>
                        <a href="" class="btn btn-light">
                            <i class="fa-regular fa-heart me-1"></i>Listeye Ekle
                        </a>
                    </div>
                </article>
            </div>
        </div>
    </div>
</section>

@{
    List<Urun>? urunler = (List<Urun>)ViewData["BenzerUrunler"]!;
    if (urunler.Count > 0)
    {
        <section class="mt-3">
            <div class="container">
                <h4 class="mb-4">Benzer Ürünler</h4>
                <div class="row gy-2">
                    @foreach (Urun urun in urunler)
                    {
                        <div class="col-lg-3 col-sm-6 col-12">
                            <div class="card shadow">
                                <div class="img-wrap">
                                    <span class="fa-regular fa-heart"></span>
                                    <img src="~/img/@urun.Resim" alt="@urun.Ad" class="card-img-top" />
                                </div>
                                <div class="border-top info-wrap">
                                    <a asp-controller="Urun" asp-action="Details" asp-route-id="@urun.Id"
                                        class="title text-truncate">@urun.Ad</a>
                                    <div class="price-wrap mb-3">
                                        <span class="price-discount">@urun.Fiyat</span>
                                        @* <del class="price">49.999 ₺</del> *@
                                    </div>
                                    <a href="" class="btn btn-light w-100"><i class="fa fa-shopping-basket me-1"></i>Sepete Ekle</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </section>
    }
}