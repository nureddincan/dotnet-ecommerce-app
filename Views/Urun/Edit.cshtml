@model UrunEditModel
@{
    Layout = "_AdminLayout";
}

<form method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-9">
            <div class="card shadow">
                <div class="card-header py-1 d-flex justify-content-between align-items-center">
                    <h5 class="card-title">Ürün Güncelle</h5>
                    <a asp-controller="Urun" asp-action="Index" class="btn btn-sm btn-primary">
                        <i class="fa-solid fa-list"></i>
                    </a>
                </div>
                <div class="card-body">
                    <input type="hidden" name="Id" value="@Model.Id">
                    <input type="hidden" name="ResimAdi" value="@Model.ResimAdi">
                    <div class="row mb-3">
                        <label asp-for="Ad" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Ad" class="form-control" />
                            <span asp-validation-for="Ad" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Aciklama" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <textarea asp-for="Aciklama" rows="3" class="form-control"></textarea>
                            <span asp-validation-for="Aciklama" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Fiyat" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Fiyat" class="form-control" />
                            <span asp-validation-for="Fiyat" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="AktifMi" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="AktifMi" class="form-check-input" />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Anasayfa" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Anasayfa" class="form-check-input" />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="KategoriId" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <select class="form-select" asp-for="KategoriId">
                                <option value="" selected>Seçiniz</option>

                                @foreach (Kategori kategori in ViewBag.Kategoriler)
                                {
                                    <option value="@kategori.Id">@kategori.Ad</option>
                                }
                            </select>
                            <span asp-validation-for="KategoriId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-10 offset-sm-2">
                            <button type="submit" class="btn btn-primary">
                                Kaydet
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow">
                <div class="card-body">
                    <img src="~/img/@Model.ResimAdi" class="img-thumbnail" alt="" />
                    <input type="file" asp-for="Resim" class="form-control mt-3" />
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}