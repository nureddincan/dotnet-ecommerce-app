@model List<Urun>


@section Bar {
    @await Component.InvokeAsync("Navbar")
}

<section class="mt-3">
    <div class="container">
        <h4 class="mb-1 mb-lg-3">Ürün Listesi</h4>

        @if (Model.Count == 0)
        {
            <div class="text-danger">Ürün Bulunamadı</div>
        }
        <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g-2">
            @foreach (Urun urun in Model)
            {
                <div class="col">
                    @await Html.PartialAsync("Partials/Site/_UrunCard", urun)
                </div>
            }
        </div>
    </div>
</section>